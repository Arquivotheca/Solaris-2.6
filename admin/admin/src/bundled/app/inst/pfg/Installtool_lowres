! installtool resource file for low resolution monitors
! the class name that must be used is "Installtool_lowres"

! Window background color
Installtool_lowres*background: gray
Installtool_lowres*foreground: black

! General Window Fonts
Installtool_lowres*fontList: lucidasans12
Installtool_lowres*XmPushButton*fontList: lucidasans-bold12
Installtool_lowres*XmPushButtonGadget*fontList: lucidasans-bold12
Installtool_lowres*XmTextField*fontList: lucidasans-typewriter12
Installtool_lowres*XmList*fontList: lucidasans-typewriter12
Installtool_lowres*XmLabel*fontList: lucidasans-bold12
Installtool_lowres*XmLabelGadget*fontList: lucidasans-bold12

! Specific Window Fonts
Installtool_lowres*metaForm*XmToggleButton*fontList: lucidasans-typewriter12
Installtool_lowres*preserveScrolledWindow*fontList: lucidasans-typewriter12
Installtool_lowres*osScrolledWindow*fontList: lucidasans12

! i18n, Do Not Change the following font specification, the items in this label
! are file system names, sizes, and mount point options
Installtool_lowres*filesysScrolledWindow*fontList: lucidasans-typewriter12

! i18n, Do Not Change the following font specification, the items in this label
! are file system sames and sizes
Installtool_lowres*spaceScrolledWindow*fontList: lucidasans-typewriter12

! i18n, Do Not Change the following font specifications, the items in this list
! are file system names and sizes, etc.
Installtool_lowres*dsr_space_req_dialog*spacereqScrolledWindow*fontList: lucidasans-typewriter12
Installtool_lowres*dsr_fssumm_dialog*fsSummScrolledWindow*fontList: lucidasans-typewriter12
Installtool_lowres*dsr_fsredist_dialog*slicesScrolledWindow*fontList: lucidasans-typewriter12
Installtool_lowres*dsr_fsredist_collapse_dialog*scrolledWindow*fontList: lucidasans-typewriter12

Installtool_lowres*softwareDependenciesScrolledList*fontList: lucidasans-typewriter12
Installtool_lowres*packagesScrolledWindow*fontList: lucidasans-typewriter12
Installtool_lowres*softwareInfoScrolledWindow*fontList: lucidasans-typewriter12
Installtool_lowres*helpform*pane*fontList: lucidasans-typewriter12
Installtool_lowres*summaryLabel*fontList: lucidasans-typewriter12

! Window and Widget Sizes
! To change the width of the built-in text on all windows, except those
! explicitly defined, change the number of columns defined by this resource
Installtool_lowres*panelhelpText*columns: 70
Installtool_lowres*messageDialog*columns: 70

! To change the width of the built-in text on the locale selection window,
! change the number of columns defined by this resource
Installtool_lowres*locale_dialog*panelhelpText*columns: 75

! To change the width of the built-in text in the disk selection window,
! change the number of columns defined by this resource
Installtool_lowres*usedisks_dialog*panelhelpText*columns: 75

! To change the width of the built-in text on the summary/profile window,
! change the number of columns defined by this resource
Installtool_lowres*summary_dialog*panelhelpText*columns: 45

! To change the width of the built-in text on the summary/profile window,
! change the number of columns defined by this resource
Installtool_lowres*bootdisk_dialog*panelhelpText*columns: 45

! The following resources set the width of the text fields used on the disk
! editor window
Installtool_lowres*recommendedValue.width: 42
Installtool_lowres*minimumValue.width: 42

! The following resources define the height and width for the XmScrolledWindow
! region on the Preserve Data window
Installtool_lowres*preserveScrolledWindow.height: 130
Installtool_lowres*preserveScrolledWindow.width: 536

! The following resources define the height and width for the XmScrolledWindow
! region on the Boot Device Selection window
Installtool_lowres*bootdiskScrolledWindow.height: 130
Installtool_lowres*bootdiskScrolledWindow.width: 336

! The following resources define the height and width for the XmScrolledWindow
! region on the profile/summary window
Installtool_lowres*summary_dialog*summaryScrolledWindow.height: 220
Installtool_lowres*summary_dialog*summaryScrolledWindow.width: 260

! The following resource sets the width of the XmForm used to display the
! software metacluster selections and their recommended sizes
Installtool_lowres*metaForm.height: 175

! The following resources set the number of items to be shown in the available and
! selected lists for both the locale and disk selection windows
Installtool_lowres*availableScrolledList.visibleItemCount: 4
Installtool_lowres*selectedScrolledList.visibleItemCount: 4

Installtool_lowres*disks_dialog*XmTextField*marginHeight: 1
Installtool_lowres*disks_dialog*XmRowColumn*marginHeight: 0

Installtool_lowres*cyl_dialog*XmTextField*marginHeight: 1
Installtool_lowres*cyl_dialog*XmRowColumn*marginHeight: 0

! The following resources are defined for the remote mount points window
Installtool_lowres*remote_dialog.width: 640
Installtool_lowres*remote_dialog.height: 400
Installtool_lowres*remote_dialog*XmTextField.width: 150
Installtool_lowres*remote_dialog*remoteList.width: 145
Installtool_lowres*remote_dialog*summaryList.width: 160

! The following resources set the height and width of the scrolled regions on the
! software customization window
Installtool_lowres*packagesScrolledWindow.height: 200
Installtool_lowres*legendForm.width: 300
Installtool_lowres*softwareInfoScrolledWindow.height: 160
Installtool_lowres*softwareInfoScrolledWindow.width: 175

! The following resource sets the width of the software customization window,
! this is needed for low resolution monitors so that this window will fit
! within the boundaries of the low resolution monitors
Installtool_lowres*software_dialog.width: 640
! This resource sets the orientation resource for the legend on the
! software customization screen
Installtool_lowres*legendRowColumn.orientation: HORIZONTAL

! This resource sets the width of the auto layout
! dialog to the maximum width for low resolution monitors
Installtool_lowres*autoquery_dialog.width: 640

! These resources set the width and height resources for the remote mount query
! dialog to the maximum width for low resolution monitors and a specified
! height
Installtool_lowres*remquery_dialog.width: 640
Installtool_lowres*remquery_dialog.height: 230

!
! DSR - General resources
!

! this controls the distance inbetween columns in the various
! DSR scrolled Windows
Installtool_lowres.dsrSpaceReqColumnSpace: 40
Installtool_lowres.dsrFSSummColumnSpace: 20
Installtool_lowres.dsrFSRedistColumnSpace: 15
Installtool_lowres.dsrFSCollapseColumnSpace: 30

!
! DSR - Analyze System screen
!
Installtool_lowres*dsr_analyze_dialog*panelhelpText*columns: 70

!
! DSR - Change Auto-layout Constraints screen
!

!
! i18n:
! panelhelpText columns is what essentially controls the overall
! width of this window.  It is important that the width here is set 
! wide enough such that the list of slices in the scrolled window
! NEVER invokes a scrollbar (since the labels on the top of the
! scrollbar do not scroll with the entries...)
! You'll have to work this width along with coming with column 
! labels that are as short as possible to make this work...
!
Installtool_lowres*dsr_fsredist_dialog*panelhelpText*columns: 83
Installtool_lowres*dsr_fsredist_dialog*slicesScrolledWindow.height: 110
Installtool_lowres*dsr_fsredist_dialog*finalSizeTextField.columns: 5
Installtool_lowres*dsr_fsredist_dialog*activeReqSizeTextField.columns: 5
Installtool_lowres*dsr_fsredist_dialog*activeCurrSizeTextField.columns: 5
Installtool_lowres*dsr_fsredist_dialog*activeSliceTextField.columns: 8

! So buttons take preferred size - don't change this unless all buttons
! the same size is ok (not very likely if any are very wide).
Installtool_lowres*dsr_fsredist_dialog*messageBox.minimizeButtons: True

!
! DSR - Change Auto-layout Constraints: Collapse dialog
!
Installtool_lowres*dsr_fsredist_collapse_dialog*scrolledWindow.height: 120

!
! DSR - File System Summary screen
!
Installtool_lowres*dsr_fssumm_dialog*panelhelpText*columns: 80
Installtool_lowres*dsr_fssumm_dialog*fsSummScrolledWindow.height: 120

!
! DSR - Media screen
!
! i18n: These 2 columns numbers should be the same
Installtool_lowres*dsr_media_dialog*panelhelpText*columns: 70
Installtool_lowres*dsr_media_dialog*infoText*columns: 70

!
! DSR - Space Required screen
!
Installtool_lowres*dsr_space_req_dialog*panelhelpText*columns: 80
Installtool_lowres*dsr_space_req_dialog*spacereqScrolledWindow.height: 120

! Help System
Installtool_lowres*helpform*helptext.rows: 15
Installtool_lowres*helpform*helptext.columns:52
Installtool_lowres*helpform*helpsubjs.visibleItemCount: 4

! Disk Editor Text Field Translations
Installtool_lowres*mainText*translations: #override \n\
	! <Key>Up:		PrimitivePrevTabGroup() \n\
	! <Key>Down:		PrimitiveNextTabGroup() 

Installtool_lowres*sizeText*translations: #override \n\
	! <Key>osfLeft:		cellChanged(size,left) \n\
	! <Key>osfRight:	cellChanged(size,right) \n\
	! <Key>osfUp:		cellChanged(size,up) \n\
	! <Key>osfDown:		cellChanged(size,down)

Installtool_lowres*mountText*translations: #override \n\
	! <Key>osfLeft:		cellChanged(mount,left) \n\
	! <Key>osfRight:	cellChanged(mount,right) \n\
	! <Key>osfUp:		cellChanged(mount,up) \n\
	! <Key>osfDown:		cellChanged(mount,down)

Installtool_lowres*startText*translations: #override \n\
	! <Key>osfLeft:		cellChanged(start,left) \n\
	! <Key>osfRight:	cellChanged(start,right) \n\
	! <Key>osfUp:		cellChanged(start,up) \n\
	! <Key>osfDown:		cellChanged(start,down)

