0x4     '"'     '3'     '#'     '3'|N
0x5     '''     '4'     '''|N   '4'|N
0x6     '('     '5'     '('|C   '5'|N
0x7     0xa7     '6'     '^'     '6'|N
0x8     0xe8    '7'     0xe8     '7'|N
0x9     '!'     '8'     '!'|N   '8'|N
0xa     0xe7    '9'     '{'     '9'|N
0xb     0xe0    '0'     '}'     '0'|N
0xc     ')'     0xb0    ')'|N   0xb0
0xd     '-'     '_'     '-'|N   '_'|N
0x10    'a'|C   'A'|C   'a'|N   'A'|N   CAPS
0x11    'z'|C   'Z'|C   'z'|N   'Z'|N   CAPS
0x1a    '^'     0xa8    '['|C    -
0x1b    '$'     '*'     ']'|C    -
0x1e    'q'|C   'Q'|C   'q'|N   'Q'|N   CAPS
0x27    'm'|C   'M'|C   'm'|N   'M'|N   CAPS
0x28    0xf9    '%'     '''     '%'|N
0x2b    0xb5     0xa3    '`'     -
0x29    0xb2    0xb2    0xb2    0xb2
0x56    '<'     '>'     '\'     -
0x2c    'w'|C   'W'|C   'w'|N   'W'|N   CAPS
0x32    ','     '?'     ','|N   '?'|N
0x33    ';'     '.'     ';'|N   '.'|N
0x34    ':'     '/'     ':'|N   '/'|N
0x35    '='     '+'     '~'|C   -
#
#
#
# map CTRL SHIFT F1  to be 0x18 for the compose character key
F37     0x18
# map CTRL SHIFT F2 to be 0x14 for the toggle key
F38     0x14
